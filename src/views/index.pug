doctype html

html(lang='en-us')
    head
        title mggwxyz | GitHub

        meta(
            name='viewport'
            content='width=device-width, initial-scale=1.0'
        )

        link(
            href='images/favicon.png'
            rel='icon'
            type='image/x-icon'
        )

        // build:css css/main.min.css
        link(
            href='stylesheets/css/main.css'
            rel='stylesheet'
            type='text/css'
        )
        // endbuild

    body

        #root-container

            #main-container

                img#profile-pic(src='images/profile-pic.jpg')
                h1 Michael Gilbertson | mggwxyz
                a#github-icon-link(href='https://github.com/mggwxyz')
                    include ../images/github-icon.svg

        // build:js js/main.min.js
        script(src='js/main.js')
        // endbuild